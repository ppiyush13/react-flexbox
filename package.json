{
    "name": "react-styled-flex",
    "version": "1.0.19",
    "description": "Simple, light, unopionated, css standard compliant Flexbox component for React using Styled Components",
    "source": "./src/index.ts",
    "main": "./dist/react-styled-flex.cjs.js",
    "module": "./dist/react-styled-flex.esm.js",
    "exports": "./dist/react-styled-flex.modern.js",
    "dts": "./dist/index.d.ts",
    "scripts": {
        "build": "run-s build:*",
        "build:clean": "rimraf dist",
        "build:code": "microbundle --no-compress",
        "build:dts": "rollup --config",
        "codecov": "codecov",
        "lint": "run-s lint:*",
        "lint:code": "run-s \"lint:code:ci -- --fix\"",
        "lint:code:ci": "eslint . --ext .js,.ts,.jsx,.tsx,.json",
        "lint:md": "remark .",
        "release": "run-s build release:np",
        "release:np": "np --no-yarn --no-cleanup --no-2fa",
        "test": "jest --coverage --runInBand",
        "test:ci": "jest --ci --runInBand --coverage --reporters=default --reporters=jest-junit",
        "test:precommit": "jest --passWithNoTests --bail --findRelatedTests"
    },
    "author": {
        "name": "Piyush Lodaya",
        "email": "ppiyush13@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ppiyush13/react-styled-flex.git"
    },
    "bugs": {
        "url": "https://github.com/ppiyush13/react-styled-flex/issues"
    },
    "homepage": "https://github.com/ppiyush13/react-styled-flex",
    "files": [
        "dist"
    ],
    "license": "MIT",
    "devDependencies": {
        "@testing-library/jest-dom": "^5.11.9",
        "@testing-library/react": "^11.2.5",
        "@types/jest": "^26.0.20",
        "@types/react": "^17.0.3",
        "@types/styled-components": "^5.1.7",
        "@types/testing-library__jest-dom": "^5.9.5",
        "@types/testing-library__react": "^10.2.0",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.17.0",
        "codecov": "^3.8.1",
        "eslint": "^7.21.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-json": "^2.1.2",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "jest": "^26.6.3",
        "jest-junit": "^12.0.0",
        "jest-styled-components": "^7.0.3",
        "microbundle": "^0.13.0",
        "npm-run-all": "^4.1.5",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "remark-cli": "^9.0.0",
        "remark-lint": "^8.0.0",
        "remark-lint-heading-increment": "^2.0.1",
        "remark-preset-lint-recommended": "^5.0.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.41.1",
        "rollup-plugin-dts": "^3.0.1",
        "styled-components": ">=5.2.1",
        "ts-jest": "^26.5.3",
        "typescript": "^4.2.3"
    },
    "peerDependencies": {
        "react": ">=16.0.0",
        "styled-components": ">=5.1.0"
    },
    "keywords": [
        "react-styled-flex",
        "react",
        "styled-componenets",
        "styled",
        "flexbox",
        "flex",
        "react-flex",
        "styled-flex",
        "react-flexbox",
        "styled-flexbox",
        "flex-gap",
        "gap"
    ]
}
